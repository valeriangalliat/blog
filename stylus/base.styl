@viewport
  width device-width

html
  font 1.25em/1.35 serif
  color darkgrey

body
  margin 0 auto
  padding 0 1em
  max-width body-width

h1, h2
  border-bottom 1px solid subtlegrey

table
  width 100%
  border-collapse collapse

  // Scroll only the table and not the whole page if it's larger than
  // the container.
  display block
  overflow auto

th, td
  padding .25em .75em
  border 1px solid lightgrey

tr:nth-child(even)
  background invisiblegrey

blockquote
  color grey
  margin-left 0
  padding-left 2em
  border-left 1px solid lightgrey
  clear() // Do not collapse quote inner margins.

dt
  font-weight bold

dd > ul, dd > ol
  & > li
    left 0
    padding-right 0

pre, code
  font-size .75em

pre > code
  font-size inherit

hr
  border-top 1px solid subtlegrey
  border-bottom 0

a
  color blue
  text-decoration none

  &:hover
    text-decoration underline

  &:visited
    color purple

ul, ol
  padding-left 0

  & li
    position relative
    left 1em
    padding-right 1em
